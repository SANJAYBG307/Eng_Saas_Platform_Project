# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production-min-50-characters
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (Docker)
DB_NAME=saas_platform
DB_USER=saas_user
DB_PASSWORD=your-strong-db-password-here
DB_HOST=db
DB_PORT=3306
DB_ROOT_PASSWORD=your-strong-root-password-here

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password-here
REDIS_DB=0

# Celery Configuration (Docker)
CELERY_BROKER_URL=redis://:your-strong-redis-password-here@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-strong-redis-password-here@redis:6379/0

# Email Configuration (SendGrid)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yoursaas.com

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 Configuration (Optional)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Site Configuration
SITE_NAME=Engineering SaaS Platform
SITE_URL=http://localhost:8000
COMPANY_EMAIL=support@yoursaas.com
COMPANY_PHONE=+1-234-567-8900

# Security (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# CORS Settings (if using separate frontend)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Sentry Configuration (Optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Multi-tenancy Settings
DEFAULT_TENANT_SCHEMA=public
TENANT_MODEL=core.Company
TENANT_DOMAIN_MODEL=core.CompanyDomain

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# Logging
LOG_LEVEL=INFO
SECURE_SSL_REDIRECT=False

# Multi-tenant Configuration
DEFAULT_TENANT_SCHEMA=public
TENANT_MODEL=core.Tenant
TENANT_DOMAIN_MODEL=core.TenantDomain
